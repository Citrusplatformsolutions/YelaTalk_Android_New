<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="HeaderFontStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
         <item name="android:singleLine">false</item>
        <item name="android:ellipsize">end</item>        
    </style>
    <style name="buttonHeader" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/heading</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
         <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>    
        <item name="android:background">@null</item>  
             
         
    </style>
    <style name="setting_font_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">18dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dip</item>
    </style>
    <style name="setting_row_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">50dip</item>
        <item name="android:layout_width">2dip</item>
    </style>
    <style name="setting_row40_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">40dip</item>
    </style>
    <style name="setting_row30_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">30dip</item>
    </style>
</resources>