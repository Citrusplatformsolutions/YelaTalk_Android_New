<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#FFFFD99C"
                android:endColor="#FFF89B09"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#FFff0000" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#FFF4F711"
                android:startColor="#FFEBA90A"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#FF767474" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#FF8C8C8C"
                android:startColor="#FFE7E7E7"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#FF767474" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
