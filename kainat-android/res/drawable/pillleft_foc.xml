<?xml version="1.0" encoding="utf-8"?>
<shape
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:shape="rectangle">
	<gradient
		android:startColor="@color/focusstart"
		android:endColor="@color/focusend"
		android:angle="270"/>
	<padding
		android:left="0dp"
		android:top="0dp"
		android:right="0dp"
		android:bottom="0dp"/>
	<stroke
		android:width="@dimen/pill_button_border"
		android:color="@color/selectedBorderColor"/>
	<corners
		android:bottomRightRadius="@dimen/pill_button_corner"
		android:bottomLeftRadius="0.1dp"
		android:topLeftRadius="@dimen/pill_button_corner"
		android:topRightRadius="0.1dp"/>
</shape>