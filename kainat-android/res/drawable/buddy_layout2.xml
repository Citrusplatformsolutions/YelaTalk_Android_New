<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:padding="5dip">
    <LinearLayout
        android:id="@+id/buddyrow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         android:padding="5dip">
        <CheckBox
            android:id="@+id/buddyLayout_check"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:focusable="false"
            android:layout_gravity="center_vertical"
            android:button="@drawable/checkbox"
            android:background = "@drawable/checkbox"
            
            android:onClick="@string/onClickHandleMethodName">
        </CheckBox>
        <ImageView
            android:id="@+id/buddyLayout_onlineStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dip"
            android:src="@drawable/online_icon">
        </ImageView>
        <ImageView
        android:background = "@drawable/im_avatar_picture_border_normal"
            android:id="@+id/buddyLayout_buddyImage"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@string/onClickHandleMethodName"
            android:scaleType="fitXY"
            android:src="@drawable/dummy_picture">
        </ImageView>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:layout_weight="0.89"
            android:orientation="vertical"
            android:paddingLeft="10dip">
            <TextView
                android:id="@+id/buddyLayout_buddyName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textSize="16dip">
            </TextView>
            <TextView
                android:id="@+id/buddyLayout_buddyInfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textSize="14dip">
            </TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/buddyLayout_spclIcon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="2dp"
                    android:src="@drawable/sp_0"
                    android:visibility="gone">
                </ImageView>
                <ImageView
                    android:id="@+id/buddyLayout_spclIcon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="2dp"
                    android:src="@drawable/sp_10"
                    android:visibility="gone">
                </ImageView>
                <ImageView
                    android:id="@+id/buddyLayout_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/buddy_male">
                </ImageView>
                <ImageView
                    android:id="@+id/buddyLayout_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:src="@drawable/buddy_voice"
                    android:visibility="gone">
                </ImageView>
                <ImageView
                    android:id="@+id/buddyLayout_bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:src="@drawable/bookmark"
                    android:visibility="gone">
                </ImageView>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/buddyLayout_profileArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:onClick="@string/onClickHandleMethodName"
            android:src="@drawable/nextarrow">
        </ImageView>
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="true"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarDefaultDelayBeforeFade="4"
        android:scrollbarFadeDuration="4">
        <LinearLayout
            android:id="@+id/buddy_menuLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>