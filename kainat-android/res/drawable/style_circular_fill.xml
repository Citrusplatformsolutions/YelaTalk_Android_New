<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/secondaryProgress">
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270" >
            <shape
                android:innerRadiusRatio="3"
                android:shape="ring"
                android:thicknessRatio="18.0"
                android:useLevel="true" >
                <gradient
                    android:centerColor="#ADB1B2"
                    android:endColor="#ADB1B2"
                    android:startColor="#ADB1B2"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>
    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270" >
            <shape
                android:innerRadiusRatio="3"
                android:shape="ring"
                android:thicknessRatio="18.0"
                android:useLevel="true" >
                <gradient
                    android:centerColor="#0D9CC7"
                    android:endColor="#0D9CC7"
                    android:startColor="#0D9CC7"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>

</layer-list>