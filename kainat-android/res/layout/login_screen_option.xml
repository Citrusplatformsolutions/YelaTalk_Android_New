<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@drawable/about_bga"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+login/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/title"
        android:visibility="invisible" >

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="3dip"
            android:background="@drawable/login_back"
            android:gravity="center"
            android:onClick="@string/onClickHandleMethodName"
            android:paddingBottom="3dip"
            android:paddingTop="3dip"
            android:text=""
            android:textColor="@color/white"
            android:visibility="visible" />

        <TextView
            style="@style/HeaderFontStyle"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/header_height"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Forgot Password"
            android:visibility="invisible" />
    </RelativeLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/parent_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/rocketalk_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/rocketalknew" />

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/parent_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal" >

                <LinearLayout
                    android:id="@+id/parent_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="top|center_vertical|center_horizontal"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/other_linearlayout"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="top|center_vertical|center_horizontal"
                        android:layout_margin="20dp"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical"
                        android:visibility="visible" >

                        <TextView
                            android:id="@+login/login_fb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/fb_login"
                            android:gravity="center"
                            android:text="           Connect with Facebook"
                            android:inputType="textCapSentences"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                          android:textStyle="bold"
                            android:onClick="@string/onClickHandleMethodName" >
                        </TextView>

                        <TextView
                            android:id="@+login/g_gmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/gp_login"
                            android:gravity="center"
                            android:text="         Connect with Google+"
                            android:inputType="textCapSentences"
                            android:onClick="@string/onClickHandleMethodName"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            >
                        </TextView>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+login/header0a"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginTop="50dp"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+login/header0sa"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal" >

                            <View
                                android:id="@+id/textViews1"
                                android:layout_width="wrap_content"
                                android:layout_height="2px"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:background="@color/time_footnote" >
                            </View>

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="0"
                                android:gravity="center"
                                android:text="Or use your email address"
                                android:textColor="@color/sub_heading"
                                android:textSize="15sp"
                                android:textStyle="normal"
                                android:typeface="sans" />

                            <View
                                android:id="@+id/textViews1"
                                android:layout_width="wrap_content"
                                android:layout_height="2px"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:background="@color/time_footnote" >
                            </View>
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/parent_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginTop="50dp"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="225dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <Button
                                android:id="@+id/login_newUserLink"
                                android:layout_width="112px"
                                android:layout_height="@dimen/button_height"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/pillred_sel"
                                android:gravity="center"
                                android:onClick="@string/onClickHandleMethodName"
                                android:text="Sign Up!"
                                android:textColor="@color/white"
                                android:textSize="@dimen/button_text"
                                android:textStyle="normal" />

                            <Button
                                android:id="@+id/ldummy"
                                android:layout_width="20dp"
                                android:layout_height="@dimen/button_height"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/signup_button_back"
                                android:gravity="center"
                                android:onClick="@string/onClickHandleMethodName"
                                android:text="Sign Up!"
                                android:textColor="@color/leftmenu_box"
                                android:textSize="18dip"
                                android:textStyle="normal"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/login_loginButton"
                                android:layout_width="112px"
                                android:layout_height="@dimen/button_height"
                                android:layout_gravity="center"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/pillred_sel"
                                android:gravity="center"
                                android:onClick="@string/onClickHandleMethodName"
                                android:paddingLeft="2dip"
                                android:paddingRight="2dip"
                                android:singleLine="true"
                                android:text=" Login "
                                android:textColor="@color/white"
                                android:textSize="@dimen/button_text"
                                android:textStyle="normal"
                                android:visibility="visible" >
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>