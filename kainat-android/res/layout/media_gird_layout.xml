<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="fill_vertical"
    android:orientation="vertical"
    android:padding="1dp" >

    <RelativeLayout
        android:layout_width="85dip"
        android:layout_height="85dip"
        android:layout_gravity="center_vertical|center_horizontal|center" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:orientation="vertical" >

            <com.kainat.app.android.uicontrol.CImageView
                android:id="@+id/media_grid_image"
                android:layout_width="85dip"
                android:layout_height="85dip"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical|center_horizontal"
                
                android:gravity="center"
                android:onClick="@string/onClickHandleMethodName"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:visibility="gone" >
            </com.kainat.app.android.uicontrol.CImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/media_grid_image_loading"
            android:layout_width="85dip"
            android:layout_height="85dip"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/border_gray"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible" >

            <ProgressBar
                android:id="@+id/media_grid_image_loading2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:indeterminateDrawable="@drawable/circulor_progressbar" />
        </LinearLayout>

        <com.kainat.app.android.uicontrol.CImageView
            android:id="@+id/m_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="bottom"
            android:onClick="@string/onClickHandleMethodName"
            android:paddingBottom="10dp"
            android:paddingLeft="12dp"
            android:paddingTop="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/m_play"
            android:visibility="gone" >
        </com.kainat.app.android.uicontrol.CImageView>

        <LinearLayout
            android:id="@+id/fly_info"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/header_height"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@color/transparent_new"
            android:gravity="left|bottom"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:visibility="gone" >

            <TextView
                android:id="@+id/image_count"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/header_height"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:gravity="top"
                android:text="f"
                android:textColor="@color/sub_heading"
                android:textSize="12dp"
                android:visibility="visible" >
            </TextView>
            <TextView
                android:id="@+id/voice_count"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/header_height"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:gravity="top"
                android:text="f"
                android:textColor="@color/sub_heading"
                android:textSize="12dp"
                android:visibility="visible" >
            </TextView>
            <TextView
                android:id="@+id/video_count"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/header_height"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:gravity="top"
                android:text="f"
                android:textColor="@color/sub_heading"
                android:textSize="12dp"
                android:visibility="visible" >
            </TextView>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/ablum_name"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="top"
        android:text="nameranameranamera"
        android:textColor="@color/translucent_red"
        android:textSize="12dp"
        android:visibility="gone" >
    </TextView>

</LinearLayout>