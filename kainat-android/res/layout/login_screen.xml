<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/about_bga"
    android:layout_gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >

     
     
    <RelativeLayout
        android:id="@+login/header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height"
        android:visibility="visible"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/title" >
        <Button
            android:id="@+id/back"
            style="@style/buttonHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="3dip"
           	android:background="@null"
            android:gravity="center"
            android:drawableLeft="@drawable/arrowleft"
            android:drawableRight="@drawable/line"
            android:onClick="@string/onClickHandleMethodName"
            android:paddingBottom="3dip"
            android:paddingTop="3dip"
            android:text=" Back "
            android:visibility="visible" />

        <TextView
            style="@style/HeaderFontStyle"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/header_height"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Login"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/parent_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
       
        
        android:orientation="vertical" >
<ImageView
                        android:id="@+id/rocketalk_image"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/rocketalknew" />
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/parent_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="fill_parent"
                 
                android:layout_gravity="center_horizontal"
                android:layout_height="fill_parent" >

                <LinearLayout
                    android:id="@+id/parent_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                   
                    android:orientation="vertical" >

                    <!-- <ImageView
                            android:id="@+id/rocketalk_image"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                           android:layout_marginTop="20dp"
                           android:layout_marginBottom="30dp"
                            android:src="@drawable/rocketalknew" /> -->
                    
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/dummy_latout"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />

                       

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="5dip"
                            android:layout_marginTop="5dip"
                            android:layout_weight="0.15"
                            android:shadowColor="#FF000000"
                            android:shadowDx="-1"
                            android:shadowDy="-1"
                            android:shadowRadius="1"
                            android:text=""
                            android:visibility="gone"
                            android:textColor="#FFCCFFFF"
                            android:textSize="20dip" >
                        </TextView>

                        <com.kainat.app.android.util.AutoTextView
                            android:id="@+id/login_username"
                            android:layout_width="280dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dip"
                            android:background="@drawable/textbox_back"
                            android:completionThreshold="1"
                            android:digits="@string/constraints_username2"
                            android:hint="Login as"
                            android:imeOptions="actionNext"
                            android:inputType="textFilter"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:maxLength="50"
                            android:paddingLeft="10dip"
                            android:selectAllOnFocus="true"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:visibility="gone" />

                        <com.kainat.app.android.util.AutoTextView
                            android:id="@+id/login_username1"
                            android:layout_width="280dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dip"
                            android:background="@drawable/textbox_back"
                            android:completionThreshold="1"
                            android:digits="@string/constraints_username2"
                            android:drawableRight="@drawable/greendownarrowbutton"
                            android:hint="Login as"
                            android:imeOptions="actionNext"
                            android:inputType="textFilter"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:maxLength="50"
                            android:paddingLeft="10dip"
                            android:selectAllOnFocus="true"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+login/msg"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:clickable="true"
                            android:gravity="center"
                            android:onClick="@string/onClickHandleMethodName"
                            android:text="message"
                            android:textColor="@color/red"
                            android:textSize="14dip"
                            android:textStyle="bold"
                            android:visibility="invisible" />

                        <LinearLayout
                            android:id="@+login/parent_layout_fn_ln"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical|center_horizontal"
                            android:orientation="horizontal"
                            android:visibility="gone" >

                            <EditText
                                android:id="@+login/first_name"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/edit_text_holo_light"
                                android:digits="@string/constraints_name"
                                android:hint="First name"
                                android:imeOptions="actionNext"
                                android:inputType="textCapSentences|textFilter"
                                android:maxLength="15"
                                android:textSize="15sp"
                                android:singleLine="true" />

                            <EditText
                                android:id="@+login/last_name"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/edit_text_holo_light"
                                android:digits="@string/constraints_name"
                                android:hint="Last name"
                                android:imeOptions="actionNext"
                                android:inputType="textCapSentences|textFilter"
                                android:maxLength="15"
                                android:textSize="15sp"
                                android:singleLine="true" />
                        </LinearLayout>

                        <MultiAutoCompleteTextView
                            android:id="@+id/login_email"
                            android:layout_width="300dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            
                            android:background="@drawable/edit_text_holo_light"
                            android:completionThreshold="1"
                            android:digits="@string/constraints_email"
                            android:hint="@string/mobile_email"
                            android:imeOptions="actionNext"
                            android:inputType="textFilter"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:maxLength="50"
                            android:paddingLeft="10dip"
                            android:selectAllOnFocus="true"
                            android:singleLine="true"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/login_password"
                            android:layout_width="300dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                           
                            android:background="@drawable/edit_text_holo_light"
                            android:hint="Password"
                            android:imeOptions="actionGo"
                            android:maxLength="30"
                            android:paddingLeft="10dip"
                            android:textSize="15sp"
                            android:selectAllOnFocus="true"
                            android:singleLine="true" />

                        <ProgressBar
                            android:id="@+id/progressBar1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginTop="50dip"
                            android:indeterminateDrawable="@drawable/circulor_progressbar"
                            android:visibility="gone" >
                        </ProgressBar>

                        <TextView
                            android:id="@+id/login_connecting"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="5dip"
                            android:layout_marginTop="15dip"
                            android:clickable="true"
                            android:gravity="center"
                            android:onClick="@string/onClickHandleMethodName"
                            android:shadowColor="@color/heading"
                            android:text="Forgot Password?"
                            android:textColor="@color/heading"
                            
                            android:textSize="14sp"
                            android:typeface="sans"
                            android:visibility="gone" >
                        </TextView>

                        <TextView
                            android:id="@+id/notyou"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="5dip"
                            android:clickable="true"
                            android:gravity="center"
                            android:onClick="@string/onClickHandleMethodName"
                            android:text=""
                            android:textColor="@color/sub_heading"
                            android:textSize="16sp"
                            android:typeface="sans"
                            android:visibility="gone" >
                        </TextView>

                        <Button
                            android:id="@+id/login_loginButton"
                            android:layout_width="296dip"
                            android:layout_height="@dimen/button_height"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dip"
                            android:layout_marginTop="15dip"
                            android:background="@drawable/pillred_sel"
                            android:onClick="@string/onClickHandleMethodName"
                            android:text="Login"
                            android:textColor="@color/white"
                            android:textSize="@dimen/button_text"
                            android:textStyle="normal"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/login_forgotPasswordLink"
                            android:layout_width="300dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="20dip"
                            android:layout_marginTop="8dip"
                            android:paddingRight="0dp"
                            android:clickable="true"
                            android:gravity="right"
                            android:onClick="@string/onClickHandleMethodName"
                            android:paddingLeft="12dip"
                            
                            android:text="@string/forgot"
                            android:textColor="@color/hyperlink"
                            android:textSize="@dimen/button_text"
                             >
                        </TextView>

                        <LinearLayout
                            android:layout_width="296dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <Button
                                android:id="@+id/login_newUserLink"
                                android:layout_width="100dp"
                                android:layout_height="@dimen/button_height"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/pillred_sel"
                                android:gravity="center"
                                android:onClick="@string/onClickHandleMethodName"
                                android:text="Sign Up!"
                                android:visibility="invisible"
                                android:textColor="@color/white"
                                android:textSize="@dimen/button_text"
                                android:textStyle="normal" />

                            <Button
                                android:id="@+id/ldummy"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/button_height"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/signup_button_back"
                                android:gravity="center"
                                android:onClick="@string/onClickHandleMethodName"
                                android:text="Sign Up!"
                                android:textColor="@color/leftmenu_box"
                                android:textSize="18dip"
                                android:textStyle="normal"
                                android:visibility="invisible" />

                            <!-- <TextView
                                android:id="@+id/login_supportEmailLink"
                                android:layout_width="100dp"
                                android:layout_height="@dimen/button_height"
                                android:layout_gravity="center"
                                android:background="@drawable/pillred_sel"
                                android:gravity="center"
                                android:onClick="@string/onClickHandleMethodName"
                                android:paddingLeft="2dip"
                                android:paddingRight="2dip"
                                android:singleLine="true"
                                android:text=" Support "
                                android:textColor="@color/white"
                                android:textSize="@dimen/button_text"
                                android:textStyle="normal"
                                android:visibility="visible" >
                            </TextView> -->
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
            android:layout_width="300dip"
            android:layout_height="fill_parent"
            android:background="@drawable/border_gray"
            android:orientation="vertical"
             android:id="@+id/other_linearlayout"
             
             android:visibility="gone"
            android:layout_gravity="center_vertical|center_horizontal"
             android:layout_margin="10dp">
            <LinearLayout
               
                android:id="@+id/linearlayout_none"
                android:layout_width="fill_parent"
                android:layout_height="42dip"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
               
                 <TextView
                    android:id="@+login/g_gmail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                     android:gravity="center|left"
                    android:textStyle="bold"
                    android:textColor="@color/darkgray"
                    android:drawableLeft="@drawable/g_plus"
                   android:text="   Sign in via Google"
                   android:onClick="@string/onClickHandleMethodName"
                    android:inputType="textCapSentences"
                    android:textSize="16dip">
                </TextView>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#ffDCDAD9">
            </View>
            <LinearLayout
                android:id="@+id/LinearLayout01"
                android:layout_width="fill_parent"
                android:layout_height="42dip"
                android:layout_marginBottom="2dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="2dip"
                android:layout_weight="1">
                <TextView
                    android:id="@+login/login_fb"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                       android:textStyle="bold"
                         android:drawableLeft="@drawable/facebook_icon"
                    android:textColor="@color/darkgray"
                     android:gravity="center|left"
                    android:text="    Sign in via Facebook"
                    android:onClick="@string/onClickHandleMethodName"
                    android:inputType="textCapSentences"
                    android:textSize="16dip">
                </TextView>
            </LinearLayout>
          
       
             </LinearLayout>
             
                    <LinearLayout
                        android:id="@+id/parent_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginTop="0dp"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/login_with_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/leavegroup"
                            android:onClick="@string/onClickHandleMethodName"
                            android:text="Login with username"
                            android:textColor="@color/hyperlink"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            android:visibility="gone" />
                        
                        <TextView
                                android:id="@+id/login_supportEmailLink"
                                android:layout_width="fill_parent"
                                android:layout_height="@dimen/button_height"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:onClick="@string/onClickHandleMethodName"
                                android:paddingLeft="2dip"
                                android:paddingRight="2dip"
                                android:singleLine="true"
                                android:text=" Get RockeTalk support "
                                android:textColor="@color/hyperlink"
                                android:textSize="@dimen/button_text"
                                android:textStyle="normal"
                                android:visibility="visible" >
                            </TextView>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>