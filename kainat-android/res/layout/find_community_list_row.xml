<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/communityInfoLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/fully_transparent"
    android:onClick="@string/onClickHandleMethodName"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:id="@+id/linearluot_out"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:orientation="horizontal" >

        <com.kainat.app.android.uicontrol.CircleImageView
            android:id="@+id/communityImage"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_gravity="center_vertical"
            android:onClick="@string/onClickHandleMethodName"
            android:scaleType="centerCrop"
            android:src="@drawable/attachicon" >
        </com.kainat.app.android.uicontrol.CircleImageView>

        <LinearLayout
            android:id="@+id/communityInfoLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/communityName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:layout_marginRight="10dp"
                        android:singleLine="true"
                        android:text="Community Name"
                        android:textColor="@color/audioColor"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:typeface="sans" >
                    </TextView>

                    <!--
                    <TextView
                        android:id="@+id/communityInfo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="1831 Communities"
                        android:textColor="@color/sub_heading"
                        android:textSize="10sp" >
                    </TextView>                    -->
                </LinearLayout>

                <Button
                    android:id="@+id/join_leave"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="0"
                    android:onClick="@string/onClickHandleMethodName"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:visibility="visible" >
                </Button>
            </LinearLayout>

            <TextView
                android:id="@+id/fn_ln"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="3dip"
                android:singleLine="true"
                android:textSize="14dip"
                android:visibility="gone" >
            </TextView>

            <TextView
                android:id="@+id/communityInfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="1 Follower, 1 Online, 20 Messages"
                android:textColor="@color/sub_heading"
                android:textSize="10sp" >
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/privateCommunityLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:text="Private"
                    android:textSize="10sp"
                    android:textColor="@color/sub_heading"
                    android:textStyle="italic" >
                </TextView>

                <TextView
                    android:id="@+id/modratedCommunityLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moderated"
                    android:textSize="10sp"
                    android:textColor="@color/sub_heading"
                    android:textStyle="italic" >
                </TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/createdOnWithPermission"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingTop="20dip"
                android:text="Created On"
                android:textColor="@color/sub_heading"
                android:textSize="11sp"
                android:visibility="gone" >
            </TextView>

            <RelativeLayout
                android:id="@+id/tag_text_ayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                
                android:padding="5dp" >

                <TextView
                    android:id="@+id/hashtag_text01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/tag_shape_bg"
                    android:paddingBottom="3dip"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:singleLine="true"
                    android:paddingTop="3dip"
                    android:text=""
                    android:textColor="@color/tag_text_color"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/hashtag_text02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:layout_toRightOf="@id/hashtag_text01"
                    android:background="@drawable/tag_shape_bg"
                    android:paddingBottom="3dip"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:paddingTop="3dip"
                    android:text=""
                    android:textColor="@color/tag_text_color"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/hashtag_text03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/hashtag_text02"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/hashtag_text02"
                    android:singleLine="true"
                    android:background="@drawable/tag_shape_bg"
                    android:paddingBottom="3dip"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:paddingTop="3dip"
                    android:text=""
                    android:textColor="@color/tag_text_color"
                    android:textSize="13sp"
                    android:visibility="gone" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/communityButtonLayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/community_acceptButton"
                    android:layout_width="58dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dip"
                    android:background="@drawable/pillgreen_sel"
                    android:onClick="@string/onClickHandleMethodName"
                    android:text="Accept"
                    android:textColor="@color/white"
                    android:visibility="gone" >
                </Button>

                <Button
                    android:id="@+id/community_declineButton"
                    android:layout_width="58dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dip"
                    android:background="@drawable/roundedredbutton"
                    android:onClick="@string/onClickHandleMethodName"
                    android:text="Decline"
                    android:textColor="@color/white"
                    android:visibility="gone" >
                </Button>

                <Button
                    android:id="@+id/community_ignoreButton"
                    android:layout_width="58dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dip"
                    android:background="@drawable/roundedredbutton"
                    android:onClick="@string/onClickHandleMethodName"
                    android:text="Ignore"
                    android:textColor="@color/white"
                    android:visibility="gone" >
                </Button>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/moreButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="5dip"
            android:onClick="@string/onClickHandleMethodName"
            android:src="@drawable/nextarrow"
            android:visibility="gone" >
        </ImageView>
    </LinearLayout>

</LinearLayout>