<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/landing_discovery_tabBar"
        android:orientation="vertical" >

        <TextView
            style="@style/HeaderFontStyle"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/header_height"
            android:background="@drawable/title"
            android:text="Account Settings" >
        </TextView>

        <include
            android:id="@+id/notificationdiloags"
            layout="@layout/notificationdiloag" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="20dip"
            android:fillViewport="true" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="20dip"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dip"
                        android:gravity="left|center" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dip"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="These info make it easier for you to retrieve your account."
                            android:textColor="@color/heading"
                            android:textSize="12dip"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="10dp"
                            android:textStyle="italic" >
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                       
                         >

                        <TextView
                            android:id="@+id/profile_dob"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="10dip"
                            android:layout_weight="1"
                            android:text="Mobile    "
                            android:gravity="bottom"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/sub_heading"
                            android:textSize="16dip" >
                        </TextView>

                        <Button
                            android:id="@+id/all_countryCodeBox"
                            android:layout_width="35dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/border_gray"
                            android:digits="@string/constraints_digits"
                            android:maxLength="6"
                            android:layout_gravity="bottom"
                            android:onClick="@string/onClickHandleMethodName"
                            android:singleLine="true"
                            android:text="CC"
                            android:textColor="@color/heading"
                            android:textSize="13sp" >
                        </Button>

                        <EditText
                            android:id="@+id/all_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="0dip"
                            android:layout_weight="3"
                            android:background="@null"
                            android:gravity="bottom"
                            android:hint="Enter your mobile"
                            android:inputType="number"
                            android:maxLength="16"
                            android:phoneNumber="true"
                            android:textColor="@color/heading"
                            android:singleLine="true"
                            android:textSize="13sp" >
                        </EditText>

                        <ImageView
                            android:id="@+id/tickmobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center"
                            android:src="@drawable/tickmark" >
                        </ImageView>
                    </LinearLayout>
                     <View
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/newline" />
                    <!--
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dip"
                   android:background="@drawable/newline">
                </View>
                    -->
                    <!--
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:gravity="left|center">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dip"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="Please note, mobile number confirmation will be required once again in case you change your number."
                        android:textColor="@color/sub_heading"
                        android:textSize="12dip"
                        android:textStyle="normal">
                    </TextView>
                </LinearLayout>
                    -->

                    
                        <LinearLayout
                            android:id="@+id/settingui_accountSettings_sq1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                          android:visibility="gone"
                            android:orientation="horizontal" >

                            <TextView
                                 android:id="@+id/settingui_accountSettings_sq"
                                
                                android:layout_width="0dip"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:text="Security question"
                                android:textColor="@color/sub_heading"
                                android:textSize="16dip"
                                android:layout_marginLeft="5dp"
                                android:textStyle="normal" >
                            </TextView>

                            <ImageView
                                android:id="@+id/tick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/tickmark" >
                            </ImageView>
                        </LinearLayout>
                  

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        
                        android:layout_marginBottom="50dp"
                        android:background="@drawable/newline" />

                    <LinearLayout
                        android:id="@+id/settingui_accountSettings"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dip"
                        
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/settingui_accountSettings_cp1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                       
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="10dip"
                                android:layout_weight="1"
                               
                                android:text="Email "
                                android:gravity="left|bottom"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/sub_heading"
                                android:textSize="16dip" >
                            </TextView>

                            <EditText
                                android:id="@+id/all_email"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="10dip"
                                android:layout_weight="4"
                                android:background="@null"
                                android:gravity="bottom"
                                android:hint="Please enter your email"
                                android:inputType="textEmailAddress"
                                android:maxLength="127"
                                android:singleLine="true"
                                android:text=""
                                android:textSize="14dip" >
                            </EditText>

                            <ImageView
                                android:id="@+id/verify"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center"
                                android:src="@drawable/verify" >
                            </ImageView>
                        </LinearLayout>
                    </LinearLayout>
                     <View
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/newline" />
                    <!--
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dip"
                    android:background="@drawable/newline">
                </View>
                    -->

                    <LinearLayout
                        android:id="@+id/settingui_accountSettings_cp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:onClick="onClick"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/settingui_accountSettings_cp1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                           
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:hint="Change Password"
                                android:textColor="@color/sub_heading"
                                android:textSize="16dip"
                                android:textStyle="normal" >
                            </TextView>
                            <!--
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:id="@+id/unverified"
                        android:layout_gravity="right|center"
                        android:src="@drawable/arrow_sett">
                    </ImageView>
                            -->
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/newline" />
                </LinearLayout>

                <Button
                    android:id="@+id/settingScreen_update_settings"
                    style="@style/setting_font_style"
                    android:layout_width="300dp"
                    android:layout_height="@dimen/header_button_height"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="20dip"
                      android:background="@drawable/pillgreen_sel"
                    android:gravity="center"
                    android:textSize="@dimen/button_text"
                    android:textStyle="bold"
                    android:text="Update Settings"
                    android:textColor="#ffffffff"
                     >
                </Button>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
