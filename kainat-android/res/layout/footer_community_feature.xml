<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+chat_panel/more_option1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/attachmetn_bg"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:visibility="visible"
        android:weightSum="1" >

        <RelativeLayout
            android:id="@+id/rrlayout_recent"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.25"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView
                android:id="@+id/recent_pic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_talk_pic"
                android:onClick="@string/onClickHandleMethodName" />

            <TextView
                android:id="@+id/name_recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recent_pic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="@string/recent"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rr_featured"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|center_horizontal|left"
            android:layout_weight="0.25"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView
                android:id="@+id/featured_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:layout_margin="0dip"
                android:background="@drawable/icon_audio"
                android:onClick="@string/onClickHandleMethodName" />

            <TextView
                android:id="@+id/name_feature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/featured_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="@string/featuredd"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rr_mostview"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.25"
            android:gravity="center_vertical|center_horizontal" >

            <!--
                 <ImageButton
                android:id="@+id/chatScreen_doodle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="0dip"
                android:background="@drawable/doodle"
                android:onClick="@string/onClickHandleMethodName" />
            -->

            <ImageView
                android:id="@+id/img_mostviewd"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_doodle"
                android:onClick="@string/onClickHandleMethodName" />

            <TextView
                android:id="@+id/name_mostviewed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_mostviewd"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="@string/most_viewed"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rr_most_liked"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.25"
            android:gravity="center_vertical|center_horizontal" >

            <!--
                 <ImageButton
                android:id="@+id/chatScreen_doodle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="0dip"
                android:background="@drawable/doodle"
                android:onClick="@string/onClickHandleMethodName" />
            -->

            <ImageView
                android:id="@+id/mostliked_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_doodle"
                android:onClick="@string/onClickHandleMethodName" />

            <TextView
                android:id="@+id/name_mostliked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mostliked_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="@string/most_liked"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>