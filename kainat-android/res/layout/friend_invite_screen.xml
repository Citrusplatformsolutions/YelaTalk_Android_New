<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+login/header0"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+login/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title"
            android:visibility="visible" >

            <TextView
                android:id="@+friend_invite/title"
                style="@style/HeaderFontStyle"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/header_height"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Contacts search" />

            <Button
                android:id="@+friend_invite/skip"
                style="@style/buttonHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="3dip"
                android:background="@null"
                android:drawableLeft="@drawable/line"
                android:gravity="center"
                android:onClick="@string/onClickHandleMethodName"
                android:padding="5dp"
                android:text="Skip"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+friend_invite/loading"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@color/white"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/terms_conditions0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_horizontal"
            android:onClick="onClick"
            android:text="Wait while we identify your contacts who are on RockeTalk"
            android:textColor="@color/heading"
            android:textSize="16sp" />

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:indeterminateDrawable="@drawable/circulor_progressbar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+friend_invite/notifyall"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@color/white"
        android:gravity="top"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:src="@drawable/my_frnd_icon" />
<TextView
                android:id="@+friend_invite/friend_found"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:onClick="onClick"
                android:text="22 of your contacts are already using rocketalk"
                android:textColor="@color/heading"
                android:textSize="16sp" />
        <LinearLayout
      
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@color/white"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="100dp"
            android:visibility="visible" >

            <TextView
                android:id="@+friend_invite/friend_found"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="center_horizontal"
                android:onClick="onClick"
                android:text="Let them know that you are here..."
                android:textColor="@color/heading"
                android:textSize="16sp" />

            <Button
                android:id="@+friend_invite/notify_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button1"
                android:onClick="@string/onClickHandleMethodName"
                android:padding="5dp"
                android:text=" Notify All "
                android:textColor="@color/white" />

            <ProgressBar
                android:id="@+friend_invite/notify_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:indeterminateDrawable="@drawable/circulor_progressbar"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+friend_invite/notifyed"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@color/white"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+friend_invite/request_sent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_horizontal"
            android:onClick="onClick"
            android:text="Friend request have been sent to 22 of your phone contacts."
            android:textColor="@color/heading"
            android:textSize="16sp" />

        <Button
            android:id="@+friend_invite/proceed"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button1"
            android:drawableRight="@drawable/arrowright"
            android:onClick="@string/onClickHandleMethodName"
            android:padding="5dp"
            android:text=" Proceed "
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>