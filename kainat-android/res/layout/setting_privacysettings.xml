<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/landingpagebackground"
    android:orientation="vertical">
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" android:layout_above="@+id/landing_discovery_tabBar">
    <TextView
        style="@style/HeaderFontStyle"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/title"
        android:text="Privacy Settings"
        >
    </TextView>
    <include
        layout="@layout/notificationdiloag"        
        android:id="@+id/notificationdiloags" />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="20dip"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="10dip"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:background="@drawable/roundedrectgradient"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="@string/onClickHandleMethodName"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="Anyone can contact me"
                        android:textColor="@color/heading"
                        android:textStyle="bold">
                    </TextView>
                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/setting_message_pref_on"
                            android:checked="true"
                            android:text="ON"
                            android:textColor="#ff000000"/>
                        <RadioButton
                            android:id="@+id/setting_message_pref_off"
                            android:checked="false"
                            android:text="OFF"
                            android:textColor="#ff000000"/>
                    </RadioGroup>
                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dip"
                    android:background="#FF9E9D9C">
                </View>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:layout_weight="1"
                    android:gravity="center">
                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:layout_weight="1"
                        android:text="Only friends can message you if you select &apos;OFF&apos;"
                        android:textColor="@color/sub_heading"
                        android:textSize="12dip">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:background="@drawable/roundedrectgradient"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="@string/onClickHandleMethodName"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="Make me invisible"
                        android:textColor="@color/heading"
                        android:textStyle="bold">
                    </TextView>
                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/setting_visibility_on"
                            android:checked="true"
                            android:text="ON"
                            android:textColor="#ff000000"/>
                        <RadioButton
                            android:id="@+id/setting_visibility_off"
                            android:checked="false"
                            android:text="OFF"
                            android:textColor="#ff000000"/>
                    </RadioGroup>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="#FF9E9D9C">
                </View>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="@string/onClickHandleMethodName"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="Others cannot see you as online and may not contact you if you select &apos;ON&apos;"
                        android:textColor="@color/sub_heading"
                        android:textSize="12dip">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:background="@drawable/roundedrectgradient"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="@string/onClickHandleMethodName"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="Comment Moderation"
                        android:textColor="@color/heading"
                        android:textStyle="bold">
                    </TextView>
                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/setting_commoderation_on"
                            android:checked="true"
                            android:text="ON"
                            android:textColor="#ff000000"/>
                        <RadioButton
                            android:id="@+id/setting_commoderation_off"
                            android:checked="false"
                            android:text="OFF"
                            android:textColor="#ff000000"/>
                    </RadioGroup>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="#FF9E9D9C">
                </View>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="@string/onClickHandleMethodName"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="Extra work for you! Select only if you want to be extra careful"
                        android:textColor="@color/sub_heading"
                        android:textSize="12dip">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
   
</LinearLayout>
