<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:id="@+id/media_followinger"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
      	android:layout_marginBottom="15dp"
        android:orientation="horizontal"
       
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/stats_media_layout_friend"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="@string/onClickHandleMethodName"
            android:orientation="vertical"
         	 
            android:visibility="visible" >

            <Button
                android:id="@+id/friends"
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:layout_weight=".20"
                android:background="@null"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center|top"
                android:padding="0dp"
                android:text="0"
                android:textColor="@color/hyperlink"
                android:textSize="15dp"
                android:textStyle="bold" >
            </Button>

            <TextView
                android:id="@+id/media_home"
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:layout_weight=".20"
                
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="0dp"
                android:text="Friends"
                android:textColor="@color/hyperlink"
                android:textSize="13dp" >
            </TextView>
        </LinearLayout>

        <View    android:layout_width="1px"
            android:layout_height="50dp"
            android:background="@color/time_footnote"
            />
        <LinearLayout
            android:id="@+id/stats_post_layout"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:onClick="@string/onClickHandleMethodName"
            android:orientation="vertical"
            
            android:visibility="visible" >

            <Button
                android:id="@+id/post"
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:layout_weight=".20"
                android:background="@null"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center|top"
                
                android:padding="0dp"
                android:text="0"
                android:textColor="@color/hyperlink"
                android:textSize="15dp"
                android:textStyle="bold" >
            </Button>

            <TextView
                android:id="@+id/media_home"
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:layout_weight=".20"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="0dp"
                android:text="Posts"
                android:textColor="@color/hyperlink"
                android:textSize="13dp" >
            </TextView>
        </LinearLayout>
         <View    android:layout_width="1px"
            android:layout_height="50dp"
            android:background="@color/time_footnote"
            />
        
<LinearLayout
            android:id="@+id/stats_followers_layout"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:onClick="@string/onClickHandleMethodName"
            android:orientation="vertical"
            
            android:visibility="visible" >

            <Button
                android:id="@+id/followers"
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:layout_weight=".20"
                android:background="@null"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center|top"
                
                android:padding="0dp"
                android:text="0"
                android:textColor="@color/hyperlink"
                android:textSize="15dp"
                android:textStyle="bold" >
            </Button>

            <TextView
                android:id="@+id/media_home"
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:layout_weight=".20"
                
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="0dp"
                android:text="Followers"
                android:textColor="@color/hyperlink"
                android:textSize="13dp" >
            </TextView>
        </LinearLayout>
        
 <View    android:layout_width="1px"
            android:layout_height="50dp"
            android:background="@color/time_footnote"
            />
        <LinearLayout
            android:id="@+id/stats_ilike_layout"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            
            android:onClick="@string/onClickHandleMethodName"
            android:orientation="vertical"
            android:visibility="visible" >

            <Button
                android:id="@+id/i_like"
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:layout_weight=".20"
                android:background="@null"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center|top"
                
                android:padding="0dp"
                android:text="0"
                android:textColor="@color/hyperlink"
                android:textSize="15dp"
                android:textStyle="bold" >
            </Button>

            <TextView
                android:id="@+id/media_home"
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:layout_weight=".20"
                
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="0dp"
                android:text="Following"
                android:textColor="@color/hyperlink"
                android:textSize="13dp" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</merge>