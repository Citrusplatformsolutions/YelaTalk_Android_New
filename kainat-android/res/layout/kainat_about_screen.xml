<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
       
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/title">
        
        <TextView
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/header_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            
            android:textColor="@color/white"
            android:drawablePadding="10dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:drawableLeft="@drawable/x_arrows_left"
            android:gravity="center"
             />
        <TextView
            android:id="@+id/title"
            style="@style/HeaderFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/header_height"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:text="@string/about_rocketalk"
            />
        <Button
            android:id="@+id/invite_Button"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dip"
            android:layout_marginTop="2dip"
            android:background="@drawable/roundedredbutton"
            android:onClick="@string/onClickHandleMethodName"
            android:text=" Invite  "
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone"/>
        <!--<Button
            android:id="@+id/web_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/title"
            android:layout_marginLeft="5dip"
            android:background="@drawable/recbutton"
            android:text="Back"/>
            -->
            <Button
            android:id="@+id/web_back_button"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="3dip"
            android:background="@drawable/roundedredbutton"
            android:onClick="@string/onClickHandleMethodName"
            android:text="Back"
            android:visibility="gone"
            android:textColor="@color/white" />
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/landing_discovery_tabBar"
        android:orientation="vertical" >
<TextView
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/header_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            
            android:textColor="@color/white"
            android:drawablePadding="10dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:drawableLeft="@drawable/x_arrows_left"
            android:gravity="center"
             />
        <TextView
            style="@style/HeaderFontStyle"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/header_height"
            android:background="@drawable/title"
            android:visibility="gone"
            android:text="@string/about_rocketalk" >
        </TextView>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white_new" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:scaleType="fitCenter"
                android:src="@drawable/logo"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="58dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/about_app_text1"
                android:textColor="@color/heading_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_centerHorizontal="true"                
                android:text="@string/about_app_version"
                android:layout_alignParentBottom="true"
                android:textColor="@color/heading"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/version_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"
                android:clickable="true"                
                android:text="@string/check_for_update"
                android:layout_alignParentBottom="true"
                android:textColor="@color/bluetext"
                android:textSize="13sp" />
             <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_centerHorizontal="true"                
                android:text="@string/about_app_text2"
                android:layout_alignParentBottom="true"
                android:textColor="@color/heading"
                android:visibility="gone"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>