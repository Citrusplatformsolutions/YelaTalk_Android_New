    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/app_blue_txt_color"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/header_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:drawableLeft="@drawable/x_arrows_left"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView1"
            style="@style/HeaderFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/header_height"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/your_phone_number"
            android:visibility="gone" />

        <TextView
            android:id="@+id/verification_verify"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/header_height"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:drawablePadding="3dp"
            android:drawableRight="@drawable/x_arrows_right"
            android:gravity="center"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="normal"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/header_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/header_logo"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/app_text_color"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/your_gateway"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/app_text_color"
        android:textStyle="italic"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/pin_not_recived2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="@string/sent_text_confirm_msg"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/heading_text"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/catagory_filed_id"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pin_not_recived2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:cursorVisible="false"
        android:drawableBottom="@drawable/create_channel_line"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/field_arrow"
        android:hint="@string/select_country"
        android:imeOptions="actionNext"
        android:inputType="textPersonName"
        android:longClickable="false"
        android:maxLength="30"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="#696969"
        android:textColorHint="#696969"
        android:textSize="16sp"
        android:textStyle="normal" >
    </EditText>

    <Spinner
        android:id="@+id/country_spinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/pin_not_recived2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:entries="@array/country"
        android:spinnerMode="dialog" />

    <LinearLayout
        android:id="@+id/mobile_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/country_spinner"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/country_code"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|left"
            android:editable="false"
            android:inputType="phone"
            android:text="+9767671"
            android:textSize="16sp" >
        </EditText>

        <EditText
            android:id="@+id/mobile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner1"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="@string/your_phone_number"
            android:inputType="number"
            android:maxLength="12"
            android:text=""
            android:textSize="16sp" >
        </EditText>
    </LinearLayout>

    <TextView
        android:id="@+id/pin_not_recived"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobile_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="@string/sent_text_confirm_title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/red"
        android:textStyle="normal"
        android:visibility="gone" />

    <!--
         <TextView
        android:id="@+id/pin_not_recived2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pin_not_recived"
        android:layout_centerHorizontal="true"
