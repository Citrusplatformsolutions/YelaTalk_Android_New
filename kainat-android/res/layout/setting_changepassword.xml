<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/landingpagebackground"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            style="@style/HeaderFontStyle"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/header_height"
            android:background="@drawable/title"
            android:text="Change Password" >
        </TextView>

        <include
            android:id="@+id/notificationdiloags"
            layout="@layout/notificationdiloag" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="20dip"
            android:fillViewport="true" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                   
                    android:gravity="left"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dip"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dip"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Password"
                            android:textColor="@color/sub_heading"
                            android:textSize="16dip"
                            android:textStyle="bold" >
                        </TextView>

                        <EditText
                            android:id="@+id/setting_cp_p"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dip"
                            android:layout_weight="2"
                            android:hint="Current password"
                            android:imeOptions="actionNext"
                         
                            android:maxLength="30"
                            android:textColor="@color/heading"
                            android:background="@drawable/edit_text_holo_light"
                            android:singleLine="true"
                            android:textSize="15sp" >
                        </EditText>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                   
                    android:gravity="left"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dip"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dip"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="New"
                            android:textColor="@color/sub_heading"
                            android:textSize="16dip"
                            android:textStyle="bold" >
                        </TextView>

                        <EditText
                            android:id="@+id/setting_cp_np"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dip"
                            android:layout_weight="2"
                            android:background="@drawable/edit_text_holo_light"
                            android:hint="New Password"
                            android:textColor="@color/heading"
                            android:imeOptions="actionNext"
                          
                            android:maxLength="30"
                            android:selectAllOnFocus="true"
                            android:singleLine="true"
                            android:digits="@string/password"
                            android:textSize="15sp" >
                        </EditText>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
           
                    android:gravity="left"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dip"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dip"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Confirm"
                            android:textSize="16dip"
                            android:textColor="@color/sub_heading"
                            android:digits="@string/password"
                            android:textStyle="bold" >
                        </TextView>

                        <EditText
                            android:id="@+id/setting_cp_cnp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dip"
                            android:layout_weight="2"
                           android:background="@drawable/edit_text_holo_light"
                            android:hint="Confirm password"
                            android:imeOptions="actionDone"
                          
                            android:maxLength="30"
                            android:selectAllOnFocus="true"
                            android:singleLine="true"
                            android:textSize="15sp" >
                        </EditText>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/settingScreen_changepass_save"
                    style="@style/setting_font_style"
                    android:layout_width="300dp"
                    android:layout_height="@dimen/header_button_height"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="20dip"
                 
            android:background="@drawable/pillgreen_sel"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Save"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/button_text"
                    >
                </Button>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
