<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/landing_discovery_tabBar"
        android:orientation="vertical" >

        <TextView
            style="@style/HeaderFontStyle"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/header_height"
            android:background="@drawable/title"
            android:text="@string/about_rocketalk" >
        </TextView>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/about_bga"
             >

            <ImageView
                android:id="@+id/landing_discovery_BtnSlideLeft"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="0px"
                android:padding="0px"
                android:scaleType="fitCenter"
                android:src="@drawable/about_kainat" />
        </ScrollView>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/about_bga"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <!--
        <TextView
            android:id="@+id/aboutScreen_version"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
          
            android:gravity="center_horizontal"
            android:text="@string/version"
            android:textColor="@color/sub_heading"
            android:textSize="16dip">
        </TextView>
                -->

                <TextView
                    android:id="@+id/aboutScreen_version"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:text="@string/version"
                    android:textColor="@color/sub_heading"
                    android:textSize="16dip" >
                </TextView>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginTop="20dip"
                        android:gravity="center"
                        android:text="Life Capture and Sharing"
                        android:textColor="@color/heading"
                        android:textSize="20dip"
                        android:textStyle="bold" >
                    </TextView>

                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="10dip"
                            android:text=". Share voice, pictures and video"
                            android:textColor="@color/sub_heading"
                            android:textSize="16dip" >
                        </TextView>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:text=". Make new friends"
                            android:textColor="@color/sub_heading"
                            android:textSize="16dip" >
                        </TextView>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:text=". Join the fun and win great prizes"
                            android:textColor="@color/sub_heading"
                            android:textSize="16dip" >
                        </TextView>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/aboutScreen_contact"
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="40dip"
                    android:background="@null"
                    android:text="@string/contact_us"
                    android:textColor="@color/hyperlink"
                    android:textSize="18dip"
                    android:textStyle="bold" >
                </Button>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dip"
                    android:gravity="center_horizontal"
                    android:text="@string/copyright_message"
                    android:textColor="@color/sub_heading"
                    android:textSize="12dip" >
                </TextView>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:gravity="center_horizontal"
                    android:text="@string/all_right_reserved"
                    android:textColor="@color/sub_heading"
                    android:textSize="12dip" >
                </TextView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

