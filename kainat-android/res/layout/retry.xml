<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="260dp" android:layout_height="wrap_content"
	android:background="@drawable/diloag_bg" android:layout_gravity="center_horizontal|center_vertical"
	android:orientation="vertical">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="2dp" android:layout_margin="5dp" />
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingTop="5dp"
		android:paddingLeft="15dp" android:layout_gravity="center_vertical"
		android:gravity="center" android:text="Alert" android:id="@+open_choice_create/title"
		android:textColor="@color/white" android:textSize="20dp" />
	
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_gravity="center_vertical"
		android:orientation="vertical" android:padding="5dp">
		<TextView android:id="@+open_choice_create/message"
			android:layout_width="fill_parent" android:layout_gravity="center_vertical"
			android:gravity="center" android:text="Form submission failed due to some reasons!"
			android:textColor="@color/white" android:layout_height="wrap_content" />
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_gravity="center_vertical"
			android:orientation="horizontal" android:padding="5dp">
			<Button android:id="@+rate/rate" android:background="@drawable/custom_button1"
				android:padding="5dp" android:layout_margin="5dp"
				android:layout_weight = "1"
				android:layout_gravity="center_vertical|center_horizontal"
				android:gravity="center" android:text="  Retry  " android:textColor="@color/white"
				android:textSize="16dp" android:layout_height="30dp"
				android:layout_width="150dp" />
			<Button android:id="@+rate/thanks" android:background="@drawable/custom_button1"
				android:layout_gravity="center_vertical|center_horizontal"
				android:gravity="center" android:padding="5dp"
				android:textSize="16dp" 
				android:layout_height="30dp" android:textColor="@color/white"
				android:text=" Cancel " android:layout_width="150dp"
				android:layout_weight = "1"
				android:layout_margin="10dp" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>