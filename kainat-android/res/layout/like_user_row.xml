<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:padding="5dip">

    <com.kainat.app.android.uicontrol.CImageView
        xmlns:rocketalk="http://schemas.android.com/apk/res/com.kainat.app.android"
rocketalk:imagetype="THUMB"
        android:id="@+userlike/memberImage"
        android:layout_width="@dimen/thumb_height"
        android:layout_height="@dimen/thumb_widht"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="3dip"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@string/onClickHandleMethodName"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:src="@drawable/dummy_picture">
    </com.kainat.app.android.uicontrol.CImageView>

    <LinearLayout
        android:id="@+userlike/text_layout"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingBottom="3dip"
        android:paddingLeft="3dp" >

        <TextView
            android:id="@+userlike/username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           android:text = "@string/app_name"
         	android:textColor="@color/heading"
            android:singleLine="true"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+userlike/fn_ln"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="3dip"
            android:singleLine="true"
            android:text="Media Like"
            android:visibility="gone"
            android:textColor="@color/heading"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
         
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
               
                android:orientation="horizontal" >

                <Button
                    android:id="@+userlike/removeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/roundedredbutton"
                    android:onClick="@string/onClickHandleMethodName"
                    android:text="Remove"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginLeft="3dip"
               
                android:orientation="horizontal" >

                <Button
                    android:id="@+userlike/makeAdminButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/roundedredbutton"
                    android:onClick="@string/onClickHandleMethodName"
                    android:text="Make Admin"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               
              
                android:orientation="horizontal" >

                <Button
                    android:id="@+userlike/removeAdminButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/roundedredbutton"
                    android:onClick="@string/onClickHandleMethodName"
                    android:text="Remove Admin"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+userlike/profileArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:visibility="gone"
        android:onClick="@string/onClickHandleMethodName"
        android:src="@drawable/nextarrow">
    </Button>
    
     <Button
                    android:id="@+userlike/more"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/header_button_height"
                    android:layout_gravity="right"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/border_gray"
                    android:onClick="@string/onClickHandleMethodName"
                    android:text="Load More"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="15sp"
                    android:visibility="visible" />
</LinearLayout>