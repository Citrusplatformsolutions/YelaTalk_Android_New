<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:id="@+id/verification_title"
        style="@style/HeaderFontStyle"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/title"
        android:text="Confirm Number"
        />
    <LinearLayout
        android:id="@+id/verification_confirm_number_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:text="Your Mobile Number"
            android:textColor="@color/sub_heading"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="sans"/>
        <EditText
            android:id="@+id/verification_mobile_number"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dip"
            android:hint="Mobile Number"
             android:background="@drawable/edit_text_holo_light"
            android:imeOptions="actionDone"
            android:inputType="number"/>
        <TextView
            android:id="@+id/verification_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dip"
            android:gravity="center"
            
            android:text="@string/verification_text"
            android:textColor="@color/black"
            android:typeface="sans"/>
        <TextView
            android:id="@+id/verification_assistance_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:autoLink="all"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:linksClickable="true"
            android:textColor="@color/black"
            android:typeface="sans"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:orientation="horizontal">
            <Button
                android:id="@+id/verification_verify"
                android:layout_width="300dp"
                android:layout_height="@dimen/header_button_height"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="30dip"
                android:layout_weight="1"
                android:background="@drawable/custom_button1"
                android:onClick="@string/onClickHandleMethodName"
                android:text="Verify"
                android:typeface="sans" 
                android:textColor="@color/white"
                android:textSize="@dimen/button_text"
                android:textStyle="normal"/>
            <Button
                android:id="@+id/verification_retry"
                android:layout_width="300dp"
                android:layout_height="@dimen/header_button_height"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="30dip"
                android:layout_weight="1"
                android:background="@drawable/custom_button1"
                android:onClick="@string/onClickHandleMethodName"
                android:text="Re-try"
                android:textColor="@color/white"
                android:textSize="@dimen/button_text"
                android:textStyle="normal"
                android:typeface="sans" 
                android:visibility="gone"/>
            <Button
                android:id="@+id/verification_continue"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/header_button_height"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="30dip"
                android:layout_weight="1"
                android:background="@drawable/custom_button1"
                android:onClick="@string/onClickHandleMethodName"
                android:text="Continue"
                android:textColor="#fff"
                android:textSize="@dimen/button_text"
                android:textStyle="normal"
                 android:typeface="sans" 
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>