<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/white"
	android:orientation="vertical">
	<RelativeLayout
		
		android:id="@+id/top_featured_relativeLayout3"
		android:layout_width="fill_parent"
		android:layout_height="@dimen/header_height"
		android:background="@drawable/title">
		<ImageView
			android:id="@+id/home_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="5dip"
			android:onClick="@string/onClickHandleMethodName"
			android:src="@drawable/home">
		</ImageView>
		<Button
			android:id="@+id/media_backButton"
			android:layout_width="wrap_content"
			android:layout_height="35dip"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_margin="3dip"
			android:background="@drawable/roundedredbutton"
			android:onClick="@string/onClickHandleMethodName"
			android:text=" Back "
			android:textColor="@color/white"
			android:visibility="gone"/>
		<TextView
			android:id="@+id/media_screenTitle"
			style="@style/HeaderFontStyle"
			android:layout_width="198dip"
			android:layout_height="@dimen/header_height"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:layout_weight="1"
			android:ellipsize="end"
			android:singleLine="true"
			android:text="Featured"
			/>
		<Button
			android:id="@+id/media_postButton"
			android:layout_width="wrap_content"
			android:layout_height="35dip"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_margin="3dip"
			android:background="@drawable/roundedredbutton"
			android:onClick="@string/onClickHandleMethodName"
			android:text="Post"
			android:textColor="@color/white"/>
	</RelativeLayout>
	<include
        layout="@layout/notificationdiloag"        
        android:id="@+id/notificationdiloags" />
	<LinearLayout
	
		android:id="@+id/top_featured_linearLayout"
		android:layout_width="fill_parent"
		android:paddingLeft = "10dp"
		android:paddingRight = "10dp"
		android:layout_marginBottom = "5dp"
		android:layout_height="wrap_content"
		android:visibility="visible">
		<TextView
			android:id="@+id/top_tab_med_featured"
			android:layout_width="0dip"
			android:layout_height="35dip"
			android:layout_marginLeft="0dip"
			android:layout_marginTop="1dip"
			android:layout_weight="1"
			android:background="@drawable/mpil_leftselector"
			android:clickable="true"
			android:focusable="true"
			android:gravity="center"
			android:onClick="onClick"
			android:text="Featured"
			android:textStyle ="bold"
			android:textColor="@color/black"
			android:textSize="15dip">
		</TextView>
		<TextView
			android:id="@+id/to_follow"
			android:layout_width="0dip"
			android:layout_height="35dip"
			android:layout_marginLeft="0dip"
			android:layout_marginTop="1dip"
			android:layout_weight="1"
			android:background="@drawable/mpil_centerselector"
			android:clickable="true"
			android:focusable="true"
			android:gravity="center"
			android:onClick="onClick"
			android:text="To Follow"
						android:textStyle ="bold"
			android:textColor="@color/black">
		</TextView>
		<TextView
			android:id="@+id/hot_picks"
			android:layout_width="0dip"
			android:layout_height="35dip"
			android:layout_marginLeft="0dip"
			android:layout_marginTop="1dip"
			android:layout_weight="1"
			android:background="@drawable/mpil_centerselector"
			android:clickable="true"
			android:focusable="true"
			android:gravity="center"
			android:onClick="onClick"
			android:text="Hot Picks"
			android:textStyle ="bold"
			android:textColor="@color/black">
		</TextView>
		<TextView
			android:id="@+id/top_tab_med_videos"
			android:layout_width="0dip"
			android:layout_height="35dip"
			android:layout_marginLeft="0dip"
			android:layout_marginRight="1dip"
			android:layout_marginTop="1dip"
			android:layout_weight="1"
			android:background="@drawable/mpil_rightselector"
			android:clickable="true"
			android:focusable="true"
			android:gravity="center"
			android:onClick="onClick"
			android:textStyle ="bold"
			android:text="Videos"
			android:textColor="@color/black">
		</TextView>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/media_search_linearLayout"
		android:layout_width="fill_parent"
		android:layout_height="50dip"
		android:background="#489AD4"
		android:gravity="center"
		
		android:orientation="horizontal"
		android:visibility="gone">
		<LinearLayout
			android:layout_width="200dip"
			android:layout_height="35dip"
			android:background="@drawable/roundedrect"
			android:gravity="center">
			<MultiAutoCompleteTextView
				android:id="@+id/media_search_tag"
				android:layout_width="wrap_content"
				android:singleLine="true"
				android:layout_height="fill_parent"
				android:layout_margin="2dip"
				android:background="@drawable/roundedtextbox"
				android:gravity="left"
				android:hint="Search by title"
				android:imeOptions="actionSearch"
				android:textSize="15dip"/>
		</LinearLayout>
		<Button
			android:id="@+id/media_search_cancel"
			android:layout_width="wrap_content"
			android:layout_height="35dip"
			android:layout_marginLeft="10px"
			android:layout_marginRight="10px"
			android:background="@drawable/blackbutton"
			android:text="Cancel"
			android:textColor="@color/white"/>
		<ImageView
			android:id="@+id/media_search_buttton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical|center_horizontal"
			android:onClick="@string/onClickHandleMethodName"
			android:src="@drawable/search"/>
	</LinearLayout>
	<ListView
		android:visibility="gone"
		android:id="@+id/media_mainList"
		style="@style/Theme.RockeTalk.Background"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:addStatesFromChildren="true"
		android:background="@color/white"
		android:layout_weight="1"
		android:cacheColorHint="@color/listcache"
		android:dividerHeight="1px"
		android:focusable="true">
	</ListView>
	<TextView
		android:id="@+id/inboxScreen_noContent"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="@color/white"
		android:gravity="center_vertical|center_horizontal"
		android:text="No result found!"
		android:layout_weight="1"
		android:textColor="@color/black"
		android:textStyle="bold"/>
	<LinearLayout
		android:visibility="gone"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:gravity="center"
		android:id="@+id/loading_linearlayout"
		android:orientation="vertical">
		<ProgressBar
			android:id="@+id/loading_bar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<TextView
			android:id="@+id/loading_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="Please wait while loading"
			android:textColor="#000000"
			android:textSize="12dip"
			android:textStyle="bold"
			android:layout_marginTop="5dip"/>
	</LinearLayout>
	<LinearLayout
		
		android:layout_width="fill_parent"
		android:layout_alignParentBottom="true"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/media_subcriber"
			android:layout_width="fill_parent"
			android:layout_height="40dip"
			android:background="@drawable/media_tabs"
			android:gravity="center"
			android:text="0 Subscibers"
			android:textColor="#ffffffff"
			android:textSize="18dip"
			android:textStyle="bold"
			android:typeface="sans"
			android:visibility="gone">
		</TextView>
	</LinearLayout>
	<LinearLayout
		android:visibility = "gone"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="#FF555555">
		<TextView
			android:id="@+id/bottom_tab_med_featured"
			android:layout_width="0dip"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:background="@drawable/media_tabs_selected"
			android:clickable="true"
			android:drawableTop="@drawable/featured_sel"
			android:focusable="true"
			android:gravity="center"
			android:onClick="onClick"
			android:text="Featured"
			android:textColor="@color/black">
		</TextView>
		<TextView
			android:id="@+id/bottom_tab_med_categories"
			android:layout_width="0dip"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:background="@drawable/media_tabs"
			android:clickable="true"
			android:drawableTop="@drawable/category"
			android:focusable="true"
			android:gravity="center"
			android:onClick="onClick"
			android:text="Categories"
			android:textColor="@color/black">
		</TextView>
		<TextView
			android:id="@+id/bottom_tab_med_myalbum"
			android:layout_width="0dip"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:background="@drawable/media_tabs"
			android:clickable="true"
			android:drawableTop="@drawable/myalbum"
			android:focusable="true"
			android:gravity="center"
			android:onClick="onClick"
			android:text="My Albums"
			android:textColor="@color/black">
		</TextView>
		<TextView
			android:id="@+id/bottom_tab_med_search"
			android:layout_width="0dip"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:background="@drawable/media_tabs"
			android:clickable="true"
			android:drawableTop="@drawable/search_med"
			android:focusable="true"
			android:gravity="center"
			android:onClick="onClick"
			android:text="Search"
			android:textColor="@color/black">
		</TextView>
	</LinearLayout>
	
	
		<LinearLayout
			
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="#d4d0c8"
			android:id="@+id/buddy_menuLayout2"
			android:visibility="visible"
			android:layout_alignParentBottom="true" 
		
			android:orientation="horizontal">
			<TextView
				android:padding="0dp"
				android:id="@+id/buddy_send_message"
				android:layout_width="0dip"
				android:layout_height="fill_parent"
				android:layout_weight=".25"
				android:background="#595959"
				android:clickable="true"
				android:drawableTop="@drawable/b_msg"
				android:focusable="true"
				android:gravity="center"
				android:onClick="onClick"
				android:textSize="11dp"
				android:text="Message"
				android:textColor="#ffffff">
			</TextView>
			<TextView
				android:paddingLeft="1dp"
				android:id="@+id/buddy_RT"
				android:layout_width="0dip"
				android:layout_height="fill_parent"
				android:layout_weight=".20"
				android:background="#595959"
				android:clickable="true"
				android:drawableTop="@drawable/b_rt"
				android:focusable="true"
				android:singleLine="true"
				android:gravity="center"
				android:onClick="onClick"
				android:textSize="11dp"
				android:text = "@string/app_name"
				android:textColor="#ffffff">
			</TextView>
			<TextView
				android:padding="0dp"
				android:id="@+id/buddy_chat"
				android:layout_width="0dip"
				android:layout_height="fill_parent"
				android:layout_weight=".20"
				android:background="#595959"
				android:clickable="true"
				android:drawableTop="@drawable/b_chat"
				android:focusable="true"
				android:textSize="11dp"
				android:gravity="center"
				android:onClick="onClick"
				android:text="Chat"
				android:textColor="#ffffff">
			</TextView>
			<TextView
				android:padding="0dp"
				android:id="@+id/buddy_makefriend"
				android:layout_width="0dip"
				android:layout_height="fill_parent"
				android:layout_weight=".20"
				android:background="#595959"
				android:clickable="true"
				android:drawableTop="@drawable/b_friend"
				android:focusable="true"
				android:textSize="11dp"
				android:gravity="center"
				android:onClick="onClick"
				android:text="Make Friend"
				android:textColor="#ffffff">
			</TextView>
			<TextView
				android:padding="0dp"
				android:id="@+id/buddy_buzz"
				android:layout_width="0dip"
				android:layout_height="fill_parent"
				android:layout_weight=".20"
				android:background="#595959"
				android:clickable="true"
				android:textSize="11dp"
				android:drawableTop="@drawable/b_buzz"
				android:focusable="true"
				android:gravity="center"
				android:onClick="onClick"
				android:text="Buzz"
				android:textColor="#ffffff">
			</TextView>
			<TextView
				android:padding="1dp"
				android:id="@+id/buddy_report"
				android:layout_width="0dip"
				android:layout_height="fill_parent"
				android:layout_weight=".20"
				android:background="#595959"
				android:textSize="11dp"
				android:clickable="true"
				android:drawableTop="@drawable/b_report"
				android:focusable="true"
				android:gravity="center"
				android:onClick="onClick"
				android:text="Report"
				android:textColor="#ffffff">
			</TextView>
		</LinearLayout>

</LinearLayout>