<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/attachment_panel"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:fitsSystemWindows="false"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+chat_panel/more_option"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/attachmetn_bg"
        android:visibility="visible"
        android:weightSum="1" >

        <RelativeLayout
            android:id="@+id/relativeLayout0"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|center_horizontal|left"
            android:layout_weight="0.33"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView
                android:id="@+id/photo_gallary"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@drawable/icon_gallery"
                android:onClick="@string/onClickHandleMethodName" />

            <TextView
                android:id="@+id/name_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/photo_gallary"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:text="@string/gallery"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/image_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="0"
                android:background="@drawable/attachednotification"
                android:clickable="false"
                android:focusable="true"
                android:gravity="center"
                android:onClick="@string/onClickHandleMethodName"
                android:paddingBottom="0px"
                android:paddingTop="0px"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.33"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView
                android:id="@+id/camera"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:layout_margin="0dip"
                android:background="@drawable/icon_photo"
                android:onClick="@string/onClickHandleMethodName" />

            <TextView
                android:id="@+id/name_gallary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/camera"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                 android:layout_marginTop="3dp"
                android:text="@string/picture"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/video_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="0"
                android:background="@drawable/attachednotification"
                android:clickable="false"
                android:focusable="true"
                android:gravity="center"
                android:onClick="@string/onClickHandleMethodName"
                android:paddingBottom="0px"
                android:paddingTop="0px"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.33"
            android:gravity="center_vertical|center_horizontal" >

            <!--
                 <ImageButton
                android:id="@+id/chatScreen_doodle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="0dip"
                android:background="@drawable/doodle"
                android:onClick="@string/onClickHandleMethodName" />
            -->

           <ImageView
                android:id="@+id/video_record"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:layout_margin="0dip"
                android:background="@drawable/icon_video"
                android:onClick="@string/onClickHandleMethodName" />

            <TextView
                android:id="@+id/name_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/video_record"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                 android:layout_marginTop="3dp"
                android:text="@string/video"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/image_count_dodle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="0"
                android:background="@drawable/attachednotification"
                android:clickable="false"
                android:focusable="true"
                android:gravity="center"
                android:onClick="@string/onClickHandleMethodName"
                android:paddingBottom="0px"
                android:paddingTop="0px"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.25"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView
                android:id="@+id/chatscreen_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_gallery"
                android:onClick="@string/onClickHandleMethodName" 
                android:visibility="gone"/>
        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/red"
            android:visibility="gone" >
        </View>

        <RelativeLayout
            android:id="@+id/relativeLayout12"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="4dip"
            android:layout_weight="0"
            android:gravity="center_vertical|center_horizontal"
            android:paddingTop="2px" >

            <!--
                 <ImageButton
                android:id="@+id/chatScreen_doodle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="0dip"
                android:background="@drawable/doodle"
                android:onClick="@string/onClickHandleMethodName" />
            -->

            <ImageView
                android:id="@+chat_panel/smiley"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dip"
                android:layout_weight="1"
                android:background="@drawable/icon_smile"
                android:onClick="@string/onClickHandleMethodName"
                android:visibility="gone" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+chat_panel/smiley"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/smiley"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+chat_panel/more_option1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="@color/attachmetn_bg"
        android:visibility="visible"
        android:weightSum="1" >

        <RelativeLayout
            android:id="@+id/relativeLayout12"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.33"
            android:gravity="center_vertical|center_horizontal" 
            >

            <ImageView
                android:id="@+id/talking_pic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@drawable/icon_talk_pic"
                android:onClick="@string/onClickHandleMethodName" 
                />
            <TextView
                android:id="@+id/name_talking_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/talking_pic"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:text="@string/talking_pic"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/relativeLayout01"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|center_horizontal|left"
            android:layout_weight="0.33"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView
                android:id="@+id/audio_file"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:layout_margin="0dip"
                android:background="@drawable/icon_audio"
                android:onClick="@string/onClickHandleMethodName" />
            <TextView
                android:id="@+id/name_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/audio_file"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                 android:layout_marginTop="3dp"
                android:text="@string/audio"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="visible" />

        </RelativeLayout>

        
        <RelativeLayout
            android:id="@+id/relativeLayout22"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.33"
            android:gravity="center_vertical|center_horizontal" >

            <!--
                 <ImageButton
                android:id="@+id/chatScreen_doodle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="0dip"
                android:background="@drawable/doodle"
                android:onClick="@string/onClickHandleMethodName" />

            -->

            <ImageView
                android:id="@+id/chatScreen_doodle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_doodle"
                android:onClick="@string/onClickHandleMethodName" />

            <TextView
                android:id="@+id/name_doodle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chatScreen_doodle"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/doodle"
                 android:layout_marginTop="3dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="visible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout32"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.25"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView
                android:id="@+id/chatscreen_gallery1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_gallery"
                android:onClick="@string/onClickHandleMethodName" 
                android:visibility="gone"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>