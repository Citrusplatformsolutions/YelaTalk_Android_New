<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_height="fill_parent"
	android:background="#717171"
		
	android:layout_width="fill_parent">
	 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title"
        android:orientation="horizontal">
          <TextView
            android:id="@+id/messageDisplay_title"
            style="@style/HeaderFontStyle"
            android:layout_width="0dip"
            android:layout_height="@dimen/header_height"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ellipsize="start"
            android:gravity="center"
            android:singleLine="true"
            android:text="Message Details"
            >
        </TextView></LinearLayout>
	<ScrollView
		android:id="@+id/coverpage"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:fadeScrollbars="false"
		android:background="#717171"
		android:visibility = "visible"
		android:orientation="vertical">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_gravity="center_horizontal"
			android:orientation="vertical">
			<TextView
				android:id="@+id/messageDisplay_contentTextmsgs"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="17dip"
				android:gravity="center_horizontal"
				android:textStyle="bold"
				android:layout_weight = "1"
				android:textColor="@color/white"
				android:layout_gravity="center_horizontal"
				android:text="You have received message from"/>
			<TextView
				android:id="@+id/cover_username"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="20dip"
				android:textColor="@color/white"
				android:layout_weight = "1"
				android:layout_gravity="center"
				android:textStyle="bold"
				android:text="(Nagendra Kumar)"
				android:gravity="center_horizontal"/>
			<TextView
				android:id="@+id/messageDisplay_contentTextmsgs"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="17dip"
				android:layout_weight = "1"
				android:textStyle="bold"
				android:gravity="center_horizontal"
				android:textColor="@color/white"
				android:layout_gravity="center_horizontal"
				android:text="Who is not in your friend list. Please select any one of the below options."/>
			<TextView
				android:layout_marginTop="5dp"
				android:layout_marginRight="10dp"
				android:layout_marginLeft="10dp"
				android:id="@+id/coverpage_view_this_message"
				android:layout_width="fill_parent"
				android:layout_height="35dp"
				android:layout_weight = "1"
				android:gravity="center_horizontal|center_vertical"
				android:textSize="18dip"
				android:textStyle="bold"
				android:onClick="@string/onClickHandleMethodName"
				android:textColor="@color/coverpagetextblue"
				android:background="@drawable/roundedrectgradient"
				android:layout_gravity="center_horizontal"
				android:text="View this message"/>
			<TextView
				android:layout_marginRight="10dp"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="5dp"
				android:layout_weight = "1"
				android:id="@+id/coverpage_view_profile"
				android:layout_width="fill_parent"
				android:layout_height="35dp"
				android:gravity="center_horizontal|center_vertical"
				android:textSize="18dip"
				android:textStyle="bold"
				android:textColor="@color/coverpagetextblue"
				android:background="@drawable/roundedrectgradient"
				android:layout_gravity="center_horizontal"
				android:text="View sender's profile"/>
			<TextView
				android:layout_marginTop="5dp"
				android:layout_marginRight="10dp"
				android:layout_marginLeft="10dp"
				android:layout_weight = "1"
				android:id="@+id/coverpage_block"
				android:layout_width="fill_parent"
				android:layout_height="35dp"
				android:gravity="center_horizontal|center_vertical"
				android:textSize="18dip"
				android:textStyle="bold"
				android:textColor="@color/coverpagetextblue"
				android:background="@drawable/roundedrectgradient"
				android:layout_gravity="center_horizontal"
				android:text="Block the sender"/>
			<TextView
				android:layout_marginTop="5dp"
				android:layout_marginRight="10dp"
				android:layout_marginLeft="10dp"
				android:id="@+id/coverpage_mark_safe"
				android:layout_width="fill_parent"
				android:layout_height="35dp"
				android:layout_weight = "1"
				android:gravity="center_horizontal|center_vertical"
				android:textSize="18dip"
				android:textStyle="bold"
				android:textColor="@color/coverpagetextblue"
				android:background="@drawable/roundedrectgradient"
				android:layout_gravity="center_horizontal"
				android:text="Mark this user as safe"/>
			<TextView
				android:layout_marginTop="5dp"
				android:layout_marginRight="10dp"
				android:layout_marginLeft="10dp"
				android:id="@+id/coverpage_privicy"
				android:layout_width="fill_parent"
				android:layout_height="35dp"
				android:layout_weight = "1"
				android:gravity="center_horizontal|center_vertical"
				android:textSize="18dip"
				android:textStyle="bold"
				android:textColor="@color/coverpagetextblue"
				android:background="@drawable/roundedrectgradient"
				android:layout_gravity="center_horizontal"
				android:text="Privacy settings"/>
			<TextView
				android:id="@+id/messageDisplay_contentTextmsgs"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="17dip"
				android:textStyle="bold"
				android:layout_weight = "1"
				android:gravity="center_horizontal"
				android:textColor="@color/white"
				android:layout_gravity="center_horizontal"
				android:text="RockeTalk is not responsible for this message."/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>