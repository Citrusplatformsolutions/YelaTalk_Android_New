<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/landingpagebackground"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <TextView
        style="@style/HeaderFontStyle"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/title"
        android:text="Auto Response"
        >
    </TextView>
    <include
        layout="@layout/notificationdiloag"        
        android:id="@+id/notificationdiloags" />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/roundedrectgradient">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linearlayout_none"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/setting_autores_chekbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </CheckBox>
                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:gravity="left"
                    android:text="Auto Response"
                    android:textColor="@color/heading"
                    android:textSize="18dip"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#ffDCDAD9">
            </View>
            <LinearLayout
                android:id="@+id/LinearLayout01"
                android:layout_width="fill_parent"
                android:layout_height="42dip"
                android:layout_marginBottom="2dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="2dip"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/profile_autoresponse"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:hint="Please enter auto response text"
                    android:inputType="textCapSentences"
                    android:textSize="16dip">
                </EditText>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/autores_button"
        style="@style/setting_font_style"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_button_height"
       
        android:layout_marginTop="20dip"
      android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
            android:background="@drawable/pillgreen_sel"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Update Settings"
        android:textColor="#ffffff">
    </Button>
</LinearLayout>
