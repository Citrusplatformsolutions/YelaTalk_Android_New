<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
     
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title">
        <Button
            android:id="@+id/sq_cancel_Buttonone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
  
            android:layout_centerVertical="true"
            android:layout_margin="3dip"
            android:background="@drawable/skip_button"
            android:onClick="@string/onClickHandleMethodName"
            android:text=""
            android:visibility="invisible"
          
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/title"
            style="@style/HeaderFontStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
             android:maxLines="1"
         android:textSize="16dip"
            android:text="Welcome to RockeTalk"
            android:layout_toLeftOf="@+id/welcome_skipbutton" android:layout_toRightOf="@+id/sq_cancel_Buttonone"/>
        <Button
            android:id="@+id/welcome_skipbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="3dip"
            android:background="@drawable/skip_button"
            android:onClick="@string/onClickHandleMethodName"
            android:text=""
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </RelativeLayout>
    <include
        layout="@layout/notificationdiloag"        
        android:id="@+id/notificationdiloags" />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="RockeTalk welcomes you!!"
                android:textSize="16dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Gallery with videos, audio And photos posted by other users.">
            </TextView>
            <Button
                android:id="@+id/welcomeScreen_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:onClick="@string/onClickHandleMethodName"
                android:text="  Next   ">
            </Button>
        </LinearLayout>
    </ScrollView>
</LinearLayout>