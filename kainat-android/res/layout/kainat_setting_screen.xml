<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/tab_space_top" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/list_background"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/header_height"
            android:background="@drawable/title" >

            <ImageButton
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/header_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:gravity="center"
                android:src="@drawable/x_left_menu"
                android:visibility="visible" />

            <TextView
                android:id="@+id/prev"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/header_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/x_arrows_left"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/title"
                style="@style/HeaderFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/header_height"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:text="@string/settings" />

            <Button
                android:id="@+id/invite_Button"
                android:layout_width="wrap_content"
                android:layout_height="35dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dip"
                android:layout_marginTop="2dip"
                android:background="@drawable/roundedredbutton"
                android:onClick="@string/onClickHandleMethodName"
                android:text=" Invite  "
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="gone" />
            <!--
            <Button
            android:id="@+id/web_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/title"
            android:layout_marginLeft="5dip"
            android:background="@drawable/recbutton"
            android:text="Back"/>
            -->

            <Button
                android:id="@+id/web_back_button"
                android:layout_width="wrap_content"
                android:layout_height="35dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="3dip"
                android:background="@drawable/roundedredbutton"
                android:onClick="@string/onClickHandleMethodName"
                android:text="Back"
                android:textColor="@color/white"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/select_interest"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/kainat_text_color"
            android:visibility="gone" />
        
        

        <LinearLayout
            android:id="@+id/choose_your_language"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left|bottom"
                android:text="@string/choose_your_language"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/heading_text_green"
                android:textSize="17sp"
                android:textStyle="normal" />
        </LinearLayout>

        <ImageView
            android:id="@+id/div_contact"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/div_contact" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/blockuser_ll"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="30dp"
                    android:gravity="left|bottom"
                    android:src="@drawable/cat1"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="left|bottom"
                    android:text="@string/block_user"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/heading"
                    android:textSize="17sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <ImageView
                android:id="@+id/div_contact"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/div_contact" />
            
            
            
            <LinearLayout
                android:id="@+id/about_rocketalk"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="30dp"
                    android:gravity="left|bottom"
                    android:src="@drawable/cat1"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="left|bottom"
                    android:text="@string/about_rocketalk"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/heading"
                    android:textSize="17sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <ImageView
                android:id="@+id/div_contact"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/div_contact" />

            <LinearLayout
                android:id="@+id/term_of_use"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/cat2"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="left|bottom"
                    android:text="@string/term_of_use"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/heading"
                    android:textSize="17sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <ImageView
                android:id="@+id/div_contact"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/div_contact" />

            <LinearLayout
                android:id="@+id/privacy_police"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/cat3"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="left|bottom"
                    android:text="@string/privacy_police"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/heading"
                    android:textSize="17sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <ImageView
                android:id="@+id/div_contact"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/div_contact" />

            <LinearLayout
                android:id="@+id/feedback"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/pencil"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="left|bottom"
                    android:text="@string/feedback"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/heading"
                    android:textSize="17sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <ImageView
                android:id="@+id/div_contact"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/div_contact" />

            <LinearLayout
                android:id="@+id/linearlayout_autoplay"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:gravity="left" >

                <TextView
                    android:id="@+id/broadcast_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="@string/autoplay"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/heading"
                    android:textSize="17sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/broadcast_toggle_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="@string/off_lbl"
                    android:textColor="@color/sub_heading" />

                <ToggleButton
                    android:id="@+id/toggel_btn_autoplay"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/toggle_selector"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:id="@+id/broadcast_toggle_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/on_lbl"
                    android:textColor="@color/sub_heading" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/list_slidermenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/header_height"
        android:background="@drawable/left_menu_bg4"
        android:choiceMode="singleChoice"
        android:divider="@drawable/navigator_list_divider"
        android:dividerHeight="1px"
         android:headerDividersEnabled="false" 
        android:listSelector="@drawable/list_selector" />

</android.support.v4.widget.DrawerLayout>