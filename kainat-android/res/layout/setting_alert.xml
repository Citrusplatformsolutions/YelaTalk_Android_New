                    android:src="@drawable/check"
                    android:visibility="invisible">
                </ImageView>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#FF9E9D9C">
            </View>
            <LinearLayout
                android:id="@+id/linearlayout_knock"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="@string/onClickHandleMethodName"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Knock"
                    android:textColor="@color/heading"
                    android:textStyle="bold">
                </TextView>
                <ImageView
                    android:id="@+id/alert_knock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/check"
                    android:visibility="invisible">
                </ImageView>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#FF9E9D9C">
            </View>
            <LinearLayout
                android:id="@+id/linearlayout_moo"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="@string/onClickHandleMethodName"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Moo"
                    android:textColor="@color/heading"
                    android:textStyle="bold">
                </TextView>
                <ImageView
                    android:id="@+id/alert_moo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/check"
                    android:visibility="invisible">
                </ImageView>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#FF9E9D9C">
            </View>
            <LinearLayout
                android:id="@+id/linearlayout_newalert"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="@string/onClickHandleMethodName"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="NewAlert"
                    android:textColor="@color/heading"
                    android:textStyle="bold">
                </TextView>
                <ImageView
                    android:id="@+id/alert_newallert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/check"
                    android:visibility="invisible">
                </ImageView>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#FF9E9D9C">
            </View>
            <LinearLayout
                android:id="@+id/linearlayout_ringing"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="@string/onClickHandleMethodName">
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Ringing"
                    android:textColor="@color/heading"
                    android:textStyle="bold">
                </TextView>
                <ImageView
                    android:id="@+id/alert_ringing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/check"
                    android:visibility="invisible">
                </ImageView>
            </LinearLayout>
              <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#FF9E9D9C">
            </View>
              <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#FF9E9D9C">
            </View>
              <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#FF9E9D9C">
            </View>
	<LinearLayout android:id="@+id/linearlayout_messageSound"
		android:layout_width="fill_parent" android:layout_height="0dip"
		android:layout_margin="5dip" android:layout_weight="1"
		android:gravity="center" android:onClick="@string/onClickHandleMethodName">
		<TextView android:layout_width="0dip" android:layout_height="wrap_content"
			android:layout_weight="1" android:gravity="left" android:text="Text To Speech"
			android:textColor="@color/heading" android:textStyle="bold">
		</TextView>
		<ToggleButton android:text="ToggleButton" android:id="@+id/toggleButton_messageSound"
		      android:checked="false"
		       android:textOff=""
        android:textOn=""
         android:textColor="@color/black"
       android:background="@drawable/bgtoggle"
			android:layout_width="wrap_content" android:layout_height="wrap_content" android:onClick="@string/onClickHandleMethodName"></ToggleButton>
		
	
	</LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
