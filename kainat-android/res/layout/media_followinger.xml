<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout 
		android:layout_width="fill_parent" android:layout_height="50dp"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="10dp"
		
		android:id="@+id/media_followinger" android:visibility="visible"
		android:orientation="horizontal">
		<LinearLayout 
			android:layout_width="fill_parent" android:layout_height="50dp"
			android:layout_weight="1" android:paddingRight="15dp"
			android:onClick="@string/onClickHandleMethodName" android:id="@+id/stats_media_layout"
			android:visibility="visible" android:orientation="vertical">
			<Button android:padding="0dp" android:id="@+id/mediaCount"
				android:layout_width="fill_parent" android:layout_height="25dp"
				android:layout_weight=".20" android:background="@drawable/roundedrectgradient_blue1"
				android:clickable="true" android:focusable="true" android:textSize="16dp"
				android:textStyle="bold" android:gravity="center" android:onClick="onClick"
				android:text="" android:textColor="#ffffff">
			</Button>
			<TextView android:padding="0dp" android:id="@+id/media_home"
				android:layout_width="fill_parent" android:layout_height="10dp"
				android:layout_weight=".20" android:background="@drawable/roundedrectgradient_blue2"
				android:clickable="true" android:focusable="true" android:textSize="13sp"
				 android:gravity="center" android:onClick="onClick"
				android:text="Posts" android:textColor="@color/white">
			</TextView>
		</LinearLayout>

		<LinearLayout 
			android:layout_width="fill_parent" android:layout_height="50dp"
			android:layout_weight="1" android:paddingRight="15dp"
			android:onClick="@string/onClickHandleMethodName" android:id="@+id/stats_followers_layout"
			android:visibility="visible" android:orientation="vertical">
			<Button android:padding="0dp" android:id="@+id/followers"
				android:layout_width="fill_parent" android:layout_height="25dp"
				android:layout_weight=".20" android:background="@drawable/roundedrectgradient_blue1"
				android:clickable="true" android:focusable="true" android:textSize="16dp"
				android:textStyle="bold" android:gravity="center" android:onClick="onClick"
				android:text="" android:textColor="#ffffff">
			</Button>
			<TextView android:padding="0dp" android:id="@+id/media_home"
				android:layout_width="fill_parent" android:layout_height="10dp"
				android:layout_weight=".20" android:background="@drawable/roundedrectgradient_blue2"
				android:clickable="true" android:focusable="true" android:textSize="13sp"
				 android:gravity="center" android:onClick="onClick"
				android:text="Followers" android:textColor="@color/white">
			</TextView>
		</LinearLayout>
		<LinearLayout 
			android:layout_width="fill_parent" android:layout_height="50dp"
			android:layout_weight="1" android:paddingRight="5dp" android:onClick="@string/onClickHandleMethodName"
			android:id="@+id/stats_following_layout" android:visibility="visible"
			android:orientation="vertical">
			<Button android:padding="0dp" android:id="@+id/following"
				android:layout_width="fill_parent" android:layout_height="25dp"
				android:layout_weight=".20" android:background="@drawable/roundedrectgradient_blue1"
				android:clickable="true" android:focusable="true" android:textSize="16dp"
				android:textStyle="bold" android:gravity="center" android:onClick="onClick"
				android:text="" android:textColor="#ffffff">
			</Button>
			<TextView android:padding="0dp" android:id="@+id/media_home"
				android:layout_width="fill_parent" android:layout_height="10dp"
				android:layout_weight=".20" android:background="@drawable/roundedrectgradient_blue2"
				android:clickable="true" android:focusable="true" android:textSize="13sp"
				 android:gravity="center" android:onClick="onClick"
				android:text="Following" android:textColor="@color/white">
			</TextView>
		</LinearLayout>
	</LinearLayout>

</merge>