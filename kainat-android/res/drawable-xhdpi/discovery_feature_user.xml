<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="310dp"
    android:layout_height="195dp"
    android:background="@drawable/border"
    android:orientation="vertical" >
      
         <LinearLayout
             android:id="@+id/LinearLayout_discoveryRow"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="left"
             android:orientation="horizontal"
             android:visibility="gone"
             android:weightSum="1" >

        <TextView 
    android:id="@+id/discoveryRow_textOnly"
    style="?android:attr/dropDownItemStyle"
    android:background = "@color/focusstart"
    android:layout_width="fill_parent"
    android:layout_height="60dip"
    android:ellipsize="marquee"
    android:padding="1dip"
    android:singleLine="false"
    android:textStyle ="bold"
   android:textColor="@color/sub_heading"
    android:textSize ="18dp"
    android:text="Inbox"
    android:drawableRight ="@drawable/arrow"
    /> 
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:gravity="left|bottom"
       
        android:orientation="vertical" android:layout_height="fill_parent" >

			<!-- <HorizontalScrollView
			    android:id="@+id/discoveryRow_ImageFeatureUserLayout"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_horizontal"
			    android:scrollbars="none"
			    android:visibility="visible" > -->

			      <RelativeLayout
			          android:layout_width="160dp"
			          android:layout_height="120dp"
			          android:layout_gravity="bottom|left"
			          android:layout_marginLeft="0dip"
			          android:gravity="left|bottom"
			          android:orientation="vertical"
			          android:visibility="visible" >

				    <LinearLayout
			    android:id="@+id/discoveryRow_FeatureUserdemo"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="bottom|left"
			    android:gravity="left"
			    android:orientation="vertical"
			    android:visibility="visible" >
			    <LinearLayout android:id="@+id/discoveryRow_FeatureUser_imageLayout"
			android:visibility="visible"
				android:layout_marginLeft="5dip"
			android:layout_gravity="left"
			android:layout_width="fill_parent" android:layout_height="fill_parent" android:gravity="center|left">
			
		

			<com.kainat.app.android.uicontrol.CImageView
			    android:id="@+id/discoveryRow_FeatureUserIcon"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			   android:scaleType="fitCenter"
			    android:layout_gravity="center"
			   
				android:gravity="center_vertical|center_horizontal"
			    android:layout_marginBottom="1dip"
			    android:layout_marginTop="1dip"
			    android:background="@drawable/border">

			</com.kainat.app.android.uicontrol.CImageView>
			</LinearLayout>
			</LinearLayout>
			
				</RelativeLayout>
		<RelativeLayout android:layout_width="wrap_content"
		android:id="@+id/discoveryRow_FeatureUserLive"
			
			android:visibility="visible"
			android:orientation="vertical"
			
			android:gravity="left"  android:layout_height="wrap_content">
			
			<LinearLayout
            android:layout_width="166dp"
            android:layout_gravity="bottom"
            
            android:gravity="bottom"
            android:orientation="horizontal" android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                 android:layout_below="@+id/discoveryRow_FeatureUser_imageLayout"
                android:orientation="vertical" android:layout_height="wrap_content">
                 
                

                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_gravity="left"
                     android:orientation="vertical" android:layout_height="wrap_content">
<TextView
                    android:id="@+id/discovery_messageDisplay_FeatureUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                 	
                    android:singleLine="true"
                    android:onClick="@string/onClickHandleMethodName"
                    android:text="dgdgdfhdfh"
                    android:textColor="@color/hyperlink"
                
                    android:textStyle="normal" >
				
                </TextView>
                <TextView
                    android:id="@+id/discovery_messageDisplay_UserPost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:gravity="left"
                   
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:text="MediaPost:0"
                    android:textColor="@color/sub_heading"
                    android:textSize="12dip" >

                </TextView>

              <TextView
                  android:id="@+id/discovery_messageDisplay_UserFollower"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="13dp"
                  android:gravity="left"
                  android:paddingRight="2dp"
                  android:singleLine="true"
                  android:text="followers:0"
               android:textColor="@color/sub_heading"
                  android:textSize="12dip" >

                </TextView>

                 <TextView
                     android:id="@+id/discovery_messageDisplay_UserFeatureComment"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginBottom="5dp"
                     android:layout_marginLeft="13dp"
                     android:gravity="right"
                    
                     android:paddingRight="2dp"
                     android:singleLine="true"
                     android:text="member Communty:0"
                    android:textColor="@color/sub_heading"
                     android:textSize="12sp" >

                </TextView>
                  </LinearLayout>
            </LinearLayout>
            
          

        </LinearLayout>
		</RelativeLayout>
		
		
		<!--  </HorizontalScrollView>		-->		
	</LinearLayout>
</LinearLayout>
